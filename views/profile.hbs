<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Profile Page</title>

    <style media="screen">
      body {
        background-color: #eee;
      }

    </style>

  </head>
  <body>

    {{> header}}

    <div class="container-fluid my-3">
      <div class="row">
        <div class="col-sm-3">
          <div class="card">
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><a href="#Profile" class="text-primary">Pofile</a></li>
                <li class="list-group-item"><a href="#About" class="text-primary">About</a></li>
                <li class="list-group-item"><a href="#Education" class="text-primary">Education</a></li>
              </ul>
          </div>

          <a href="/edit" class="btn btn-primary mt-5 btn-block">Edit</a>

        </div>

        <div class="col-sm-9">
           <div class="container" id="main">
              <div class="card mb-3">
                <div class="card-header">
                  <h5><p text="PROFILE" align ="center">PROFILE</p></h5>
                </div>
                <div class="card-body">
                   <p text="NAME" align ="center">{{user.profile.about.name.firstName}} {{user.profile.about.name.middleName}} {{user.profile.about.name.lastName}}</p>
                   <p text="BATCH" align ="center">2019 Pasout Batch</p>
                   <p text="SEMESTER" align ="center">{{user.profile.about.sem}}th Semester</p>
                </div>
              </div>


              <div class="card mb-3" id="About">
                 <div class="card-header">
                    <h5>ABOUT</h5>
                 </div>
                 <div class="card-body">
                   <div class="row">
                     <div class="col-sm">
                       <p>Date of Birth</p>
                       <p>Gender</p>
                       <p>Contact No</p>
                       <p>Email Id</p>
                     </div>
                     <div class="col-sm">
                       <!--<p>{{user.about.dob}}</p>-->
                       <p>{{user.profile.about.dob}}</p>
                       <p>{{user.profile.about.gender}}</p>
                       <p>{{user.profile.about.contact.phone}}</p>
                       <p>{{user.profile.about.contact.email}}</p>

                     </div>
                   </div>

                 </div>
              </div>

              <div class="card mb-3" id="Education">
                 <div class="card-header">
                    <h5>EDUCATION</h5>
                 </div>
                 <div class="card-body">
                  <div class="row">
                     <div class="col-sm-6">
                      <h4><p>B.E</p></h4>
                      <p>{{user.profile.about.branch}}
                     </div>
                     <div class="col-sm-3">
                      <h5><p text="cgpa" align="right">{{user.profile.education.be}} %</p></h5>
                    </div>
                  </div>
                 <hr class="m-5">
                 <div class="row">
                   <div class="col-sm-6">
                     <h4><p>Class XII</p>
                    </div>
                    <div class="col-sm-3">
                      <h5><p text="score" align="right">{{user.profile.education.college}} %</p></h5>
                    </div>
                  </div>
                  <hr class="m-5">
                    <div class="row">
                      <div class="col-sm-6">
                        <h4><p>Class X</p>
                      </div>
                      <div class="col-sm-3">
                        <h5><p text="score" align="right">{{user.profile.education.school}} %</p></h5>
                      </div>
                    </div>
                 </div>
              </div>
           </div>
         </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
